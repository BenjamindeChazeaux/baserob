<div class="container w-50" data-controller="geo-scoring">
  <h2 class="text-center">ðŸ“Š AI Visibility Score</h2>

  <!-- ðŸ“Œ Bouton pour afficher le champ du prompt -->
  <div class="mt-4 text-center">
    <button class="btn btn-success" data-action="click->geo-scoring#togglePrompt">+</button>
  </div>

  <!-- ðŸ“Œ Formulaire de saisie du prompt (cachÃ© par dÃ©faut) -->
  <div class="mt-4" data-geo-scoring-target="promptFormContainer" style="display: none;">
    <form id="prompt-form" data-action="submit->geo-scoring#addPrompt">
      <div class="input-group">
        <input type="text" id="prompt-input" class="form-control" placeholder="Enter your prompt...">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  <!-- ðŸ“Œ Liste des prompts saisis -->
  <div class="mt-4">
    <h3>Entered Prompts</h3>
    <ul id="prompt-list" class="list-group" data-geo-scoring-target="promptList">
      <!-- Les prompts seront ajoutÃ©s ici dynamiquement -->
    </ul>
  </div>

  <!-- ðŸ“Œ SÃ©lection du mot-clÃ© -->
  <div class="mt-4">
    <select id="keyword-dropdown" class="form-control"
      data-action="change->geo-scoring#loadScores"
      data-geo-scoring-target="keywordDropdown">
      <option value="">Select a keyword</option>
      <% @keywords.each do |kw| %>
        <option value="<%= kw.id %>" <%= "selected" if @selected_keyword&.id == kw.id %>><%= kw.content %></option>
      <% end %>
    </select>
  </div>
</div>
