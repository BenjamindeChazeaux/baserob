<%# app/views/geo_scorings/index.html.erb %>
<%= turbo_frame_tag "geo_scoring_content" do %>
  <div class="dashboard-container">
    <div class="main-content">
      <!-- Header -->
      <header class="dashboard-header">
        <div class="header-top">
          <div class="welcome-text">
            <h1><span class="gradient-text">Positionnement EO</span></h1>
            <p class="date"><%= Date.today.strftime("%A %d %B %Y") %></p>
          </div>
        </div>

        <!-- Search Bar -->
        <div class="search-bar-container">
          <div class="search-bar modern-search-bar">
            <%= form_tag search_geo_scorings_path, method: :post, class: "search-form", data: { controller: "form" } do %>
              <i class="fas fa-search"></i>
              <%= text_field_tag :keyword_content, nil,
                  class: "search-input modern-input",
                  placeholder: "Entrez un mot-clé...",
                  data: { form_target: "input" } %>
              <%= button_tag type: 'submit', class: "btn-secondary" do %>
                <i class="fas fa-arrow-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </header>

      <% if @selected_keyword %>
        <!-- Results Section -->
        <section class="quick-actions">
          <div class="section-header">
            <h2>Résultats pour : <%= @selected_keyword.content %></h2>
            <p>Analyse détaillée par fournisseur d'IA</p>
          </div>

          <div class="cards-grid">
            <% @provider_data.each do |provider| %>
              <div class="action-card">
                <div class="card-header">
                  <h3><%= provider[:name].capitalize %></h3>
                </div>
                <div class="score-display">
                  <div class="score-circle <%= score_color_class(provider[:global_score]) %>">
                    <span class="score-value"><%= provider[:global_score].round %>%</span>
                  </div>
                  <p class="score-label">Score global</p>
                </div>
                <div class="metrics-grid">
                  <div class="metric">
                    <span class="metric-label">Position</span>
                    <span class="metric-value"><%= provider[:position_score].round(2) %></span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">Fréquence</span>
                    <span class="metric-value"><%= provider[:reference_score].round(2) %></span>
                  </div>
                  <div class="metric">
                    <span class="metric-label">URL</span>
                    <span class="metric-value"><%= provider[:url_presence] ? "Présente" : "Absente" %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </section>

        <!-- Global Score Section -->
        <section class="resources-section">
          <div class="section-header">
            <h2>Score Global</h2>
            <p>Moyenne des scores de tous les fournisseurs</p>
          </div>
          <div class="resource-card">
            <div class="resource-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="resource-content">
              <h3>Score Global</h3>
              <div class="global-score-display <%= score_color_class(@global_score) %>">
                <span class="score-number"><%= @global_score.round(2) %>%</span>
              </div>
            </div>
          </div>
        </section>

      <% else %>
        <!-- Empty State -->
        <div class="empty-state">
          <div class="empty-state-content">
            <i class="fas fa-search"></i>
            <h3>Aucun mot-clé sélectionné</h3>
            <p>Entrez un mot-clé dans la barre de recherche pour voir l'analyse de positionnement.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :styles do %>
  <style>
    /* Metrics Grid */
    .metrics-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      margin-top: 1rem;
    }

    .metric {
      text-align: center;
      padding: 0.5rem;
      background: var(--primary-light);
      border-radius: 8px;
    }

    .metric-label {
      display: block;
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin-bottom: 0.25rem;
    }

    .metric-value {
      font-size: 1rem;
      font-weight: 600;
      color: var(--primary-color);
    }

    /* Search Form */
    .search-form {
      display: flex;
      align-items: center;
      width: 100%;
      gap: 1rem;
    }

    .btn-secondary {
      background: var(--primary-color);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      transition: var(--transition);
    }

    .btn-secondary:hover {
      background: #1d4ed8;
    }

    /* Global Score Display */
    .global-score-display {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 1rem;
    }

    .score-number {
      font-size: 3rem;
      font-weight: 700;
      color: var(--primary-color);
    }

    /* Variables */
    :root {
      --primary-color: #2563eb;
      --primary-light: #EEF2FF;
      --success-color: #10B981;
      --warning-color: #F59E0B;
      --danger-color: #EF4444;
      --text-primary: #111827;
      --text-secondary: #6B7280;
      --border-color: #E5E7EB;
      --card-radius: 16px;
      --transition: all 0.2s ease;
      --section-spacing: 4rem;
    }

    /* Layout */
    .dashboard-container {
      padding: 2rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    .main-content {
      width: 100%;
    }

    /* Header */
    .dashboard-header {
      margin-bottom: var(--section-spacing);
    }

    .header-top {
      margin-bottom: 2rem;
    }

    .welcome-text h1 {
      font-size: 2.25rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
    }

    .gradient-text {
      background: linear-gradient(135deg, var(--primary-color), #4F46E5);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .date {
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    /* Search bar */
    .search-bar-container {
      width: auto;
    }

    .modern-search-bar {
      position: relative;
      display: flex;
      align-items: center;
      background: white;
      border: 1px solid var(--border-color);
      border-radius: var(--card-radius);
      padding: 0.75rem 1rem;
      transition: var(--transition);
    }

    .modern-search-bar:focus-within {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px var(--primary-light);
    }

    .modern-search-bar i {
      color: var(--text-secondary);
      margin-right: 0.75rem;
    }

    .modern-input {
      flex: none;
      border: none;
      outline: none;
      font-size: 1rem;
      color: var(--text-primary);
      background: transparent;
      transition: width 0.3s ease;
      min-width: 200px;
    }

    .modern-input::placeholder {
      color: var(--text-secondary);
    }

    .modern-search-bar {
      width: fit-content;
      max-width: 100%;
    }

    /* Sections */
    .dashboard-sections {
      display: flex;
      flex-direction: column;
      gap: var(--section-spacing);
    }

    .section-header {
      margin-bottom: 2rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .section-header p {
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    /* Cards */
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .action-card {
      background: white;
      border-radius: var(--card-radius);
      padding: 2rem;
      border: 1px solid var(--border-color);
      transition: var(--transition);
      min-width: 0;
      display: flex;
      flex-direction: column;
    }

    .action-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .action-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
    }

    .action-card p {
      color: var(--text-secondary);
      font-size: 0.875rem;
      line-height: 1.5;
    }

    .card-header {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem;
      background: var(--primary-light);
      border-radius: var(--card-radius);
      margin-bottom: 2rem;
    }

    .card-header h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--primary-color);
      margin: 0;
    }

    /* Scores */
    .score-display {
      text-align: center;
      margin-bottom: 2rem;
    }

    .score-circle {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      background: var(--primary-light);
      color: var(--primary-color);
    }

    .score-circle.success { background: #ECFDF5; color: var(--success-color); }
    .score-circle.warning { background: #FEF3C7; color: var(--warning-color); }
    .score-circle.danger { background: #FEE2E2; color: var(--danger-color); }

    .score-value {
      font-size: 2rem;
      font-weight: 600;
    }

    .score-label {
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    /* Resources */
    .resources-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .resource-card {
      background: white;
      border-radius: var(--card-radius);
      padding: 2rem;
      border: 1px solid var(--border-color);
      display: flex;
      gap: 1.5rem;
      transition: var(--transition);
    }

    .resource-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .resource-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      background: var(--primary-light);
      color: var(--primary-color);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
    }

    .resource-content {
      flex: 1;
    }

    .resource-content h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .resource-content p {
      color: var(--text-secondary);
      font-size: 0.875rem;
      line-height: 1.5;
      margin-bottom: 1rem;
    }

    /* Empty state */
    .empty-state {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 400px;
    }

    .empty-state-content {
      text-align: center;
      max-width: 400px;
    }

    .empty-state-content i {
      font-size: 3rem;
      color: var(--text-secondary);
      margin-bottom: 1rem;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .dashboard-container {
        padding: 1.5rem;
      }

      .dashboard-sections {
        gap: 3rem;
      }

      .cards-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .action-card,
      .resource-card {
        padding: 1.5rem;
      }

      .section-header h2 {
        font-size: 1.25rem;
      }
    }
  </style>
<% end %>
