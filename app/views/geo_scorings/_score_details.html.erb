<div class="score-details">
  <h4>Score Breakdown</h4>
  <div class="score-item">
    <span class="score-name">Position score</span>
    <span class="score-value <%= position_score >= 75 ? 'success' : (position_score >= 50 ? 'warning' : 'danger') %>">
      <%= position_score %>%
    </span>
  </div>
  <div class="score-item">
    <span class="score-name">Frequency score</span>
    <span class="score-value <%= frequency_score >= 75 ? 'success' : (frequency_score >= 50 ? 'warning' : 'danger') %>">
      <%= frequency_score %>%
    </span>
  </div>
  <div class="score-item">
    <span class="score-name">Link score</span>
    <span class="score-value <%= link_score >= 75 ? 'success' : (link_score >= 50 ? 'warning' : 'danger') %>">
      <%= link_score %>%
    </span>
  </div>
</div> 