<div class="dashboard-container">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content" data-controller="charts">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="date-welcome">
        <p class="date"><%= Date.today.strftime("%-d %B, %Y") %></p>
        <h1>AI Analytics</h1>
      </div>
      <div class="header-actions">
        <div class="search-bar main-search">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search for metrics, reports, data sources...">
          <span class="keyboard-shortcut">âŒ˜ K</span>
        </div>
        <button class="action-button">
          <i class="fas fa-plus"></i> New Report
        </button>
      </div>
    </header>

    <!-- Main Dashboard Content -->
    <div class="dashboard-content">
      <!-- Top Cards Row -->
      <div class="metrics-row">
        <div class="metric-card">
          <div class="metric-header">
            <h3>Total Visitors</h3>
            <div class="metric-icon">
              <i class="fas fa-users"></i>
            </div>
          </div>
          <div class="metric-value">
            <span class="value">12,543</span>
            <span class="change positive">
              <i class="fas fa-arrow-up"></i>12.3%
            </span>
          </div>
          <p class="metric-period">vs previous period</p>
        </div>

        <div class="metric-card">
          <div class="metric-header">
            <h3>AI Bot Visits</h3>
            <div class="metric-icon">
              <i class="fas fa-robot"></i>
            </div>
          </div>
          <div class="metric-value">
            <span class="value">4,387</span>
            <span class="change positive">
              <i class="fas fa-arrow-up"></i>18.7%
            </span>
          </div>
          <p class="metric-period">vs previous period</p>
        </div>

        <div class="metric-card">
          <div class="metric-header">
            <h3>Human Visits</h3>
            <div class="metric-icon">
              <i class="fas fa-user"></i>
            </div>
          </div>
          <div class="metric-value">
            <span class="value">8,156</span>
            <span class="change positive">
              <i class="fas fa-arrow-up"></i>9.2%
            </span>
          </div>
          <p class="metric-period">vs previous period</p>
        </div>

        <div class="metric-card">
          <div class="metric-header">
            <h3>Bounce Rate</h3>
            <div class="metric-icon">
              <i class="fas fa-percentage"></i>
            </div>
          </div>
          <div class="metric-value">
            <span class="value">42.5%</span>
            <span class="change negative">
              <i class="fas fa-arrow-up"></i>3.1%
            </span>
          </div>
          <p class="metric-period">vs previous period</p>
        </div>
      </div>

      <!-- Charts Section -->
      <div class="charts-container">
        <!-- Time Series Chart with Filters -->
        <div class="chart-card large" 
             data-charts-target="timeseriesChart"
             data-timeseries-data="<%= @time_series_data.to_json %>">
          <div class="chart-header">
            <h2>AI Bot Requests Over Time</h2>
            
            <div class="chart-filters">
              <%= form_tag ai_analytics_path, method: :get, class: "filters-form", id: "chart-filters" do %>
                <div class="filters-container">
                  <div class="filter-group">
                    <%= select_tag :provider, 
                                 options_for_select(@providers, @selected_provider),
                                 class: "filter-select",
                                 prompt: "All Providers" %>
                  </div>
                  
                  <div class="filter-group">
                    <%= select_tag :bot_type, 
                                 options_for_select(@bot_types, @selected_bot_type),
                                 class: "filter-select",
                                 prompt: "All Bot Types" %>
                  </div>
                  
                  <div class="filter-group">
                    <%= select_tag :period, 
                                 options_for_select(@periods.map { |p| [p[:label], p[:value]] }, @selected_period),
                                 class: "filter-select" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="chart-container">
            <canvas id="trafficChart"></canvas>
          </div>
        </div>

        <!-- Distribution Pie Chart -->
        <div class="chart-card" data-charts-target="pieChart">
          <div class="chart-header">
            <h2>Traffic Distribution</h2>
          </div>
          <div class="chart-container">
            <canvas id="visitsChart" data-visit-data="<%= @visit_data.to_json %>"></canvas>
          </div>
        </div>
      </div>

      <!-- Top Pages Table -->
      <div class="table-card">
        <div class="table-header">
          <h2>Top Pages Visited by AI Bots</h2>
          <button class="view-all-btn">View All</button>
        </div>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Page URL</th>
                <th>Visits</th>
                <th>Bot Type</th>
                <th>Provider</th>
                <th>Last Visit</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="url-cell">/products/category-1</td>
                <td>342</td>
                <td>AI crawler</td>
                <td>OpenAI</td>
                <td>2 hours ago</td>
              </tr>
              <tr>
                <td class="url-cell">/blog/post-2</td>
                <td>287</td>
                <td>Search engine crawler</td>
                <td>Google</td>
                <td>5 hours ago</td>
              </tr>
              <tr>
                <td class="url-cell">/about-us</td>
                <td>245</td>
                <td>AI search</td>
                <td>Perplexity</td>
                <td>1 day ago</td>
              </tr>
              <tr>
                <td class="url-cell">/services</td>
                <td>198</td>
                <td>Content scraper</td>
                <td>Anthropic</td>
                <td>2 days ago</td>
              </tr>
              <tr>
                <td class="url-cell">/contact</td>
                <td>156</td>
                <td>Research bot</td>
                <td>Mistral</td>
                <td>3 days ago</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .metrics-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .metric-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
  }
  
  .metric-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }
  
  .metric-header h3 {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
  }
  
  .metric-icon {
    width: 36px;
    height: 36px;
    background: rgba(51, 51, 51, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .metric-icon i {
    color: var(--primary-color);
  }
  
  .metric-value {
    display: flex;
    align-items: baseline;
  }
  
  .value {
    font-size: 1.75rem;
    font-weight: 600;
    margin-right: 0.75rem;
  }
  
  .change {
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .change.positive {
    color: #22C55E;
  }
  
  .change.negative {
    color: #EF4444;
  }
  
  .metric-period {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }
  
  .charts-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .chart-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
  }
  
  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  
  .chart-header h2 {
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .chart-filters {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .filter-group label {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }
  
  .filter-select {
    padding: 0.5rem;
    border: 1px solid #e1e1e1;
    border-radius: 6px;
    font-size: 0.85rem;
    background: white;
  }
  
  .chart-container {
    height: 300px;
    position: relative;
  }
  
  .table-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
  }
  
  .table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .view-all-btn {
    background: none;
    border: none;
    color: var(--primary-color);
    font-size: 0.9rem;
    cursor: pointer;
  }
  
  .data-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .data-table th {
    text-align: left;
    padding: 1rem;
    font-weight: 500;
    color: var(--text-secondary);
    border-bottom: 1px solid #e1e1e1;
  }
  
  .data-table td {
    padding: 1rem;
    border-bottom: 1px solid #e1e1e1;
  }
  
  .url-cell {
    font-family: monospace;
    color: var(--primary-color);
  }
  
  @media (max-width: 1200px) {
    .metrics-row {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .charts-container {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .metrics-row {
      grid-template-columns: 1fr;
    }
    
    .chart-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .chart-filters {
      width: 100%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Pie Chart for Traffic Sources
    const ctxPie = document.getElementById('visitsChart').getContext('2d');
    const pieData = {
      labels: ['Human', 'AI Bot'],
      datasets: [{
        data: [65, 35],
        backgroundColor: ['#333333', '#86868b'],
        borderWidth: 0
      }]
    };
    
    new Chart(ctxPie, {
      type: 'pie',
      data: pieData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
          },
          title: {
            display: false
          }
        }
      }
    });
    
    // Line Chart for Traffic Overview with time series data
    const ctxLine = document.getElementById('trafficChart').getContext('2d');
    const timeSeriesData = <%= raw @time_series_data.to_json %>;
    
    new Chart(ctxLine, {
      type: 'line',
      data: timeSeriesData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          mode: 'index',
          intersect: false,
        },
        plugins: {
          legend: {
            position: 'top',
          },
          tooltip: {
            mode: 'index',
            intersect: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              callback: function(value) {
                if (value >= 1000) {
                  return (value / 1000).toFixed(1) + 'k';
                }
                return value;
              }
            }
          },
          x: {
            grid: {
              display: false
            }
          }
        }
      }
    });
  });
</script>